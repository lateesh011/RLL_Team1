@model Cooking_WebApi.Models.Comments

@{
    ViewBag.Title = "Info";
}

<html>
<head>
    <title>Receipe Information Page</title>
    <link href="~/Content/Info.css" rel="stylesheet" />
</head>
<body>
    
    <div class="container-fluid" id="infol">
        <div class="row" style="margin:20px;">
            <label style="color: #283747"><h2>Recipe Name :- @ViewBag.RName (@ViewBag.Vnb - @ViewBag.State))</h2></label>
            <div class="col-md-5">
                <div class="row" style="margin:1px;margin-top:8px;">
                    <label id="exampleFormControlFile"><h5>Image :- </h5></label>
                    <img id="imge" src="~/RecipeImg/@ViewBag.Photo" height="255" width="200" />
                </div>
                <p id="line"></p>
                <div class="row" style="margin:1px;margin-top:5px;">
                    <label style="color: #CB4335" id="you"><h5>Youtube Link :-</h5></label>
                    <iframe id="yout" width="200" height="250" src="@ViewBag.Youtube"
                            title="YouTube video player" frameborder="0"
                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                            allowfullscreen>
                    </iframe>
                </div>

            </div>
            <div class="col-md-7">
                <div class="row" style="margin:10px;">
                    <label style="color: #1F618D"><h5>Ingredient :-</h5></label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" readonly>@ViewBag.Ingredient)</textarea>
                </div>
                <p id="line"></p>
                <div class="row" style="margin:5px;">
                    <label style="color: #1F618D"><h5>How to Make :-</h5></label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="15" readonly>@ViewBag.Htm</textarea>
                </div>

            </div>


        </div>
    </div>
    
    @{Html.BeginForm("Info", "Main", FormMethod.Post);}
    <div class="container-fluid" id="infol">
        <div class="row" style="margin:20px;">

            <div class="row" style="margin:1px;margin-top:5px;">
                <h4 style="color:forestgreen;font-weight:600">Comments</h4>
                <div>
                    @foreach (Cooking_WebApi.Models.Comments feed in ViewBag.CList)
                    {
                        <label style="color:forestgreen;font-weight:600">@feed.UserName</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" readonly>@feed.Comment</textarea>
                    }
                </div>

                <div class="row" style="margin:5px;">
                    <label style="color: #1F618D"><h5>Add Comment Here :-</h5></label>
                    <textarea class="form-control" name="comment" id="comment" rows="5" required></textarea>
                    <input type="submit" style="background:blue;color:white" id="regbtn" value="Send" class="btn" />
                </div>

            </div>
        </div>
    </div>
    @{Html.EndForm();}


</body>
</html>
